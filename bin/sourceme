#! /bin/bash

export PROCESS_HOME=PROJECT_ROOT_PATH
export JAVA_HOME=JAVA_HOME_PATH

CLASSPATH=$JAVA_HOME/lib:$JAVA_HOME/jre/lib/:PROCESS_HOME/src.

for jar in `ls $PROCESS_HOME/lib/*.jar`
do
  CLASSPATH=$CLASSPATH:$jar
done

export CLASSPATH

javac=javac
if test -n "$JAVA_HOME"; then
    javac="$JAVA_HOME/bin/javac"
fi

"$javac" $PROCESS_HOME/src/*.java  "$@"
